<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical">

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#FFFFE0B2"
        android:dividerHeight="2sp"
    app:layout_constraintVertical_bias="0.25" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="@color/bootstrap_brand_warning"
                    android:gravity="bottom|center"
                    android:onClick="chart"
                    android:text="アンガーグラフ"
                    android:textColor="@color/bootstrap_brand_secondary_text"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="@color/bootstrap_brand_warning"
                    android:gravity="bottom|center"
                    android:onClick="count6s"
                    android:text="カウントバック"
                    android:textColor="@color/bootstrap_brand_secondary_text"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="@color/bootstrap_brand_warning"
                    android:gravity="bottom|center"
                    android:onClick="quiz"
                    android:text="アンガークイズ"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="138dp"
                    android:layout_height="46dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="0.19"
                    android:scaleX="2"
                    android:scaleY="2"
                    app:srcCompat="@drawable/ic_show_chart_black_24dp" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginRight="63dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="0.65"
                    android:scaleX="1"
                    android:scaleY="1"
                    app:srcCompat="@drawable/ic_timer_black_24dp" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="60dp"
                    android:layout_weight="0.19"
                    app:srcCompat="@drawable/ic_question_answer_black_24dp" />

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</LinearLayout>
